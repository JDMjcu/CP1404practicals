BoxLayout:
    orientation: 'vertical'
    BoxLayout:
        # Input number | Up down buttons
        orientation: 'horizontal'
        TextInput:
            id: input_number
            text: ''
            font_size: 48
            multiline: False
            size_hint_x: 0.8
        BoxLayout:
            orientation: 'vertical'
            size_hint_x: 0.2
            Button:
                text: 'Up'
                on_press: app.handle_increment(input_number.text, 1)
            Button:
                text: 'Down'
                on_press: app.handle_increment(input_number.text, -1)
    
    Button:
        text: 'Convert miles to km'
        on_press: app.handle_calculate(input_number.text)
    
    Label:
        id: output_label
        font_size: 48
        color: (1, 1, 0, 1)